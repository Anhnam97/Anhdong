[Script]
http-request ^https?:\/\/.*\.(ads|adservice|doubleclick|googlesyndication|googletagservices|taboola|outbrain|applovin|adcolony|unityads|facebookads|tracking|track|click|metrics|beacons)\..* script-path=https://raw.githubusercontent.com/your-username/adblock-loon/main/adblock.js, tag=Ad Blocker

[MITM]
hostname = 
  *.ads.*, 
  *.adservice.*,
  *.doubleclick.net, 
  *.googlesyndication.com,
  *.googletagservices.com,
  *.taboola.com,
  *.outbrain.com,
  *.applovin.com,
  *.adcolony.com,
  *.unityads.unity3d.com,
  *.facebookads.com,
  *.tracking.*,
  *.track.*,
  *.metrics.*,
  *.beacons.*

